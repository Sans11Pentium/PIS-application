        {label: 'Additional Charge 2', name: 'additional_charge2', type: 'number'},
        {label: 'Additional Charge 3', name: 'additional_charge3', type: 'number'},
        {label: 'Additional Member', name: 'AdditionalMember', type: 'text'}
    ]; %>
    <% fields.forEach((field) => { %>
        <h5><%= field.label %> : <%= data[field.name] %></h5>
        
    <% }) %>
</div>
<div class="corr-req" style="color: white;">
    <h4>Found some mistake in ur details? </h4>
    <h5>Fill the form below and request for an edit</h5>
    <form action="/emp/correct" method="post">
        <input type="hidden" name="emp[empid]" value="<%=data.employee_id%>">
        <textarea type="text" name="emp[msg]" placeholder="Enter complete detail"></textarea>
        <button class="btn btn-secondary">Send</button>
    </form>
</div>
<div class="active-corr-req">
    <h2>Your active requests</h2>
    <% if(results.length == 0) {%>
        Seems like there is no active request yet
    <% }else { %>
        <table>
            <th>Correction Id</th>
            <th>Employee Id</th>
            <th>Requested correction</th>
            <th>Date requested</th>
            <% results.forEach((res) => { %>
                <tr>
                    <td><%=res.id%></td>
                    <td><%=res.employee_id%></td>
                    <td><%=res.correction_required%></td>
                    <td><%=res.date%></td>
                </tr>
            <% }) %>
        </table>
    <% } %>
</div>