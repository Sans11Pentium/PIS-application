<% layout("/layouts/adminLayout") %>
<% if(currUser != undefined){ %>
    <h3>Hi, admin <i><%= currUser.username %></i>. What do you plan to do today?</h3>
<% }else{ %>
    no user has logged in, please refresh the page once! 
<% } %>
<div class="container">
        <h1>Employee List</h1>
        <table>
            <thead>
                <tr>
                    <th>Employee ID</th>
                    <th>Name</th>
                    <th>Code</th>
                </tr>
            </thead>
            <tbody>
                <% emplist.forEach(employee => { %>
                    <tr>
                        <td><%= employee.employee_id %></td>
                        <td><%= employee.Name %></td>
                        <td><%= employee.code %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
</div>
